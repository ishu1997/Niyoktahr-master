<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvjobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile App Development"
                android:textColor="@color/colorPrimary" android:textSize="25dp"/>
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/tvcompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niyokta Hr Private Limited"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Salary             :"
                    android:textSize="18dp"
                />
                <TextView android:id="@+id/tvLocation"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Delhi NCR"

                          android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Location        :"
                    android:textSize="18dp"
                />
                <TextView android:id="@+id/tv_job_location"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Delhi NCR"
                          android:textSize="18dp"

                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Vacancy        :"
                    android:textSize="18dp"
                />
                <TextView android:id="@+id/tv_job_vacancy"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Delhi NCR"
                          android:textSize="18dp"

                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Last Date      :"
                    android:textSize="18dp"
                />
                <TextView android:id="@+id/tv_job_lastdate"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Delhi NCR"
                          android:textSize="18dp"

                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Describtion   :"
                    android:textSize="18dp"
                />
                <TextView android:id="@+id/job_description"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Delhi NCR"
                          android:textSize="18dp"

                />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <Button android:id="@+id/btapllied" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style"
                    android:text="Apply"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>